<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>    
  </aside>
  <div class="span8">
    <div style="margin-bottom:25px">
      <%= link_to "Make New Post", root_path, class: "btn btn-large btn-primary" %>
    </div>
    <%= render 'follow_form' if signed_in? %>	    <% if @user.microposts.any? %>
	      <h3>Posts (<%= @user.microposts.count %>)</h3>
	      <ol class="microposts">
	        <%= render @microposts %>
	      </ol>
	      <%= will_paginate @microposts %>
	    <% end %>
  </div>
</div>